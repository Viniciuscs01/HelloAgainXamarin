<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld2.Insta">
    <StackLayout>
        <StackLayout Padding="20">
            <Label Text="nyc_photographer"/>
        </StackLayout>
        <Image Source="http://lorempixel.com/1920/1080/nature/3/"/>
        <StackLayout Padding="20, 20, 20, 30" Orientation="Horizontal">
            <Label Text="Like" Margin="0, 0, 25, 0"/>
            <Label Text="Comment" Margin="0, 0, 25, 0"/>
            <Label Text="Share" Margin="0, 0, 25, 0"/>
        </StackLayout>
        <StackLayout Padding="20, 0, 20, 0">
            <BoxView Color="#f0f0f0" HeightRequest="1"/>
            <Label Text="700 likes" FontAttributes="Bold"/>
            <Label Text="Texto..."/>
        </StackLayout>
    </StackLayout>
</ContentPage>